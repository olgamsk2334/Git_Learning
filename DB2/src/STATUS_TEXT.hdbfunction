FUNCTION "F_STATUS_TEXT"( IV_ID INTEGER, IV_LANGU VARCHAR(2) )
       RETURNS EV_STATUS_TEXT NVARCHAR(20)
       LANGUAGE SQLSCRIPT 
       SQL SECURITY INVOKER AS 
BEGIN 

    SELECT "STATUS_TEXT" into EV_STATUS_TEXT -- default '8'--, 
	FROM "STATUS_TEXT" 
    WHERE "ID" = :IV_ID and "LANGU" = :IV_LANGU;
    
   -- EV_ID = :lt_.ID[1];
   -- EV_STATUS_TEXT = :lt_.STATUS_TEXT[1];
    
END;