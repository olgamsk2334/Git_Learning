FUNCTION "F_STATUSTEXT_T"( IV_ID INTEGER )
       RETURNS TABLE( "LANGU" VARCHAR(2), 
    				  "STATUS_TEXT" NVARCHAR(20) )
       LANGUAGE SQLSCRIPT 
       SQL SECURITY INVOKER AS 
BEGIN 

  RETURN  SELECT "LANGU",
				 "STATUS_TEXT"
	FROM "STATUS_TEXT" 
    WHERE "ID" = :IV_ID; 

END;